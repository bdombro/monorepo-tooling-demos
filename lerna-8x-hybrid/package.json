{
  "name": "root",
  "private": true,
  "packageManager": "yarn@4.0.2",
  "devDependencies": {
    "@lerna/legacy-package-management": "patch:@lerna/legacy-package-management@npm%3A8.0.2#~/.yarn/patches/@lerna-legacy-package-management-npm-8.0.2-6011816afc.patch",
    "lerna": "^8.0.1",
    "nx": "^17"
  },
  "workspaces": [
    "packages/lib",
    "packages/lib2",
    "packages/lib3",
    "packages/lib4"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "//bootstrap:just-root": "yarn workspaces focus root # note cannot be run from script",
    "bootstrap:with-up": "lerna bootstrap --scope=@app/lib3 --include-dependencies",
    "bootstrap:with-down": "lerna bootstrap --scope=@app/lib3 --include-dependents",
    "build": "nx run-many -t build",
    "build:scoped": "nx build app",
    "build:changed": "nx affected -t build",
    "//clean": "nx run-many -t clean && lerna clean --yes",
    "clean": "find packages \\( -name @app -or -name dist -or -name package.tgz \\) -exec rm -rf {} \\;",
    "exec": "lerna exec --parallel -- pwd",
    "pack2": "lerna exec --scope=@app/lib --include-dependencies -- yarn pack",
    "lint": "nx run-many -t lint",
    "lint:scoped": "nx lint app",
    "test": "nx run-many -t  test",
    "test:scoped": "nx test app",
    "watch": "nx run-many -t watch"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "typescript": "^5.3.3"
  }
}
