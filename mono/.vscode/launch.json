  "version": "0.2.0",
  "configurations": [
    {
      "name": "mono-cli",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/mono/mono-cli.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "1"
      },
      "args": ["pkg", "build", "react-app"]
      // "args": ["clean"]
    },
    {
      "name": "bz-cli",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/util/bz-cli/bz-cli.ts",
      "cwd": "${workspaceFolder}/packages/react-app",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "1"
      },
      "args": ["install"]
    },
    {
      "name": "util.ts",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/util/bz-cli/util.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "4"
      },
      "args": ["util"]
    },
    {
      "name": "pkg-cli",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/mono/pkg-cli.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "5",
      },
      "args": ["install"]
    },
    {
      "name": "pkg-cli:code",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/util/bz-cli/pkg-cli.ts",
      "cwd": "/Users/brian.dombrowski/Dev/Javascript/monorepo-tooling/code-clean/js/packages/shared-fe",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "5"
      },
      "args": ["build", "."]
    },
    {
      "name": "pkg-cli:code:node",
      "type": "node",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/util/bz-cli/js/pkg-cli.js",
      "cwd": "/Users/brian.dombrowski/Dev/Javascript/monorepo-tooling/code-clean/js/packages/shared-fe",
      "stopOnEntry": false,
      "runtimeExecutable": "/Users/brian.dombrowski/.asdf/shims/node",
      // "watchMode": false,
      "env": {
        "LOG": "5"
      },
      "args": ["build", "."]
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "bootstrap",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "5"
      },
      "args": []
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Run File",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "noDebug": true,
      "watchMode": false,
      "env": {
        "LOG": "5"
      },
      "args": []
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "attach",
      "name": "Attach Bun",
      "url": "ws://localhost:6499/",
      "stopOnEntry": false
    }
  ]
}