{
  "name": "root",
  "private": true,
  "packageManager": "yarn@4.0.2",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^8.0.1"
  },
  "scripts": {
    "bootstrap": "yarn",
    "bootstrap:with-up:": "yarn workspaces focus app",
    "build": "lerna run build",
    "build:scoped": "lerna run build --scope=app --include-dependents --stream",
    "build:changed": "lerna run build --since --sort",
    "clean": "lerna run clean --parallel && lerna clean --yes",
    "exec": "lerna exec -- pwd",
    "lint": "lerna run lint",
    "lint:scoped": "lerna run lint --scope=app --include-dependents --stream",
    "test": "lerna run test",
    "test:scoped": "lerna run test --scope=app --include-dependents --stream",
    "watch": "lerna run watch --parallel"
  }
}
