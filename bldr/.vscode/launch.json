{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "bldr",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/bldr/src/bldr-cli.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "2"
      },
      "args": ["build", "react-app"]
      // "args": ["clean", "--all", "--ws", "--buildCache"]
    },
    
    {
      "name": "bldr:code",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/bldr/src/bldr-cli.ts",
      "cwd": "${env:HOME}/Dev/Javascript/monorepo-tooling/code-clean/js/packages/shared-fe",
      "env": {
        "LOG": "2",
        "NPM_TOKEN": "${env:NPM_TOKEN}",
      },
      // "envFile": "${workspaceFolder}/.envrc",
      // "args": ["clean", "city", "--include-dependencies", "--ws", "--buildCache"],
      "args": ["build", "cake"]
      // "args": ["build", "bricks-knapsack"]
      // "args": ["tree", "bricks"]
      // "args": ["buildAttributes", "cinderblocks"]
    },
    {
      "name": "bldr:node",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/bldr/dist/src/bldr-cli.js",
      "runtimeExecutable": "${env:HOME}/.asdf/shims/node",
      "env": {
        "LOG": "2",
        "NODE_NO_WARNINGS": "1",
      },
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/bldr/dist/**/*.js"],
      "args": ["build", "react-app"]
    },
    {
      "name": "bldr:node:code",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/bldr/dist/src/bldr-cli.js",
      "runtimeExecutable": "${env:HOME}/.asdf/shims/node",
      "cwd": "${env:HOME}/Dev/Javascript/monorepo-tooling/code-clean/js/packages/shared-fe",
      "env": {
        "LOG": "2",
        "NODE_NO_WARNINGS": "1",
        "NPM_TOKEN": "${env:NPM_TOKEN}",
      },
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/bldr/dist/**/*.js"],
      "args": ["build", "cake"]
    },
    // To attach to JS debug console, just start this before running bun in a Javascript debug terminal
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "attach",
      "name": "Attach Bun",
      "url": "ws://localhost:6499/",
      "stopOnEntry": false
    },
    {
      "name": "bldr:yarn",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "/usr/local/bin/yarn",
      "cwd": "${workspaceFolder}/packages/lib0",
      "env": {
        "LOG": "2"
      },
      "args": ["install"]
    },
  ]
}