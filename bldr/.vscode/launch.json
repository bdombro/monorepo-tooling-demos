  "version": "0.2.0",
  "configurations": [
    {
      "name": "bldr",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/bldr/src/bldr-cli.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "1"
      },
      // "args": ["build", "react-app"]
      // "args": ["tree", "lib3"]
      "args": ["build", "lib3"]
      // "args": ["clean"]
      // "args": ["tree", "lib3"]
    },
    {
      "name": "bldr:yarn",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "/usr/local/bin/yarn",
      "cwd": "${workspaceFolder}/packages/lib0",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "1"
      },
      "args": ["install"]
    },
    {
      "name": "bldr:code",
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "program": "${workspaceFolder}/bldr/src/bldr-cli.ts",
      "cwd": "/Users/brian.dombrowski/Dev/Javascript/monorepo-tooling/code-clean/js/packages/shared-fe",
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "LOG": "1",
        "NPM_TOKEN": "${env:NPM_TOKEN}",
      },
      // "envFile": "${workspaceFolder}/.envrc",
      // "args": ["clean", "city", "--include-dependencies", "--ws", "--buildCache"],
      // "args": ["tree", "city"]
      "args": ["build", "city"]
    },
    // To attach, just start this before running bun in a Javascript debug terminal
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "attach",
      "name": "Attach Bun",
      "url": "ws://localhost:6499/",
      "stopOnEntry": false
    },
