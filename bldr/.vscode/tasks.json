  "version": "0.2.0",
  "tasks": [
    {
      "label": "tsc: build - tsconfig.json",
      // the standard typescript stuff doesn't work bc asdf and od cli hooking
      // "type": "typescript",
      // "tsconfig": "tsconfig.json",
      // "option": "watch",
      "type": "shell",
      "command": "${env:HOME}/.asdf/shims/node ${workspaceFolder}/bldr/node_modules/.bin/tsc -p ${workspaceFolder}/bldr/tsconfig.json",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "focus": false, // This line prevents the task from taking focus
        "reveal": "silent", // This line prevents the terminal from showing up when the task is run
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
    }
  ],
}